  <!-- Modal Inicio Sesión -->
  <div class="modal fade" id="modalInicioSesion" data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content rounded-5 shadow">
        <div class="modal-header p-4 border-bottom-0">
          <h2 class="fw-bold mb-0">Iniciar sesión</h2>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body p-4">
          <form class="needs-validation" method="post" action="#" novalidate>

            <!-- Email -->
            <div class="col-sm">
              <div class="form-floating">
                <input type="email" class="form-control rounded-4" id="txtEmailInicioSesion" placeholder="Email" name="email"
                  required>
                <label for="txtEmailInicioSesion">Email</label>
                <div class="invalid-feedback">Escribe un email válido</div>
              </div>
            </div>

            <div class="col-sm mt-3 mb-4">
              <!-- Password -->
              <div class="form-floating">
                <input type="text" class="form-control rounded-4" id="txtPasswordInicioSesion" placeholder="Password"
                  name="password" required>
                <label for="txtPasswordInicioSesion">Contraseña</label>
                <div class="invalid-feedback">Introduce la contraseña</div>
              </div>
            </div>

            <div class="col-sm">
              <button class="mt-2 w-100 mb-2 btn btn-lg rounded-4 btn-primary" type="submit">Entrar

              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Registro -->
  <div class="modal fade" id="modalRegistro" data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content rounded-5 shadow">
        <div class="modal-header p-4 border-bottom-0">
          <h2 class="fw-bold mb-0">Crear cuenta</h2>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body p-4">
          <form class="needs-validation" method="post" action="#" novalidate>

            <!-- Nombre -->
            <div class="col-sm">
              <div class="form-floating">
                <input type="text" class="form-control rounded-4" id="txtName" placeholder="Name" name="name" required>
                <label for="txtName">Nombre</label>
                <div class="invalid-feedback">Introduce tu nombre</div>
              </div>
            </div>

            <!-- Email -->
            <div class="col-sm my-3">
              <div class="form-floating">
                <input type="email" class="form-control rounded-4" id="txtEmail" placeholder="Email" name="email"
                  required>
                <label for="txtEmail">Email</label>
                <div class="invalid-feedback">Escribe un email válido</div>
              </div>
            </div>

            <div class="col-sm mb-4">
              <!-- Password -->
              <div class="form-floating">
                <input type="password" class="form-control rounded-4" id="txtPassword" placeholder="Password"
                  name="password" required>
                <label for="txtPassword">Contraseña</label>
                <div class="invalid-feedback">Introduce la contraseña</div>
              </div>
            </div>

            <div class="col-sm">
              <button class="mt-2 w-100 mb-2 btn btn-lg rounded-4 btn-primary" type="submit">Registrarme</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

